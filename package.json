{
  "name": "copy-lgtm",
  "displayName": "Copy LGTM",
  "version": "2.2.1",
  "description": "Extension that allows you to place a button on the GitHub pull request screen that allows you to copy LGTM images.",
  "author": "hayato",
  "type": "module",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package",
    "upload": "./scripts/createLGTM.mts",
    "lint": "run-s -c lint:*",
    "lint:prettier": "prettier --check .",
    "lint:eslint": "eslint --cache .",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier --write .",
    "fix:eslint": "eslint --cache . --fix"
  },
  "dependencies": {
    "@plasmohq/messaging": "^0.5.0",
    "@plasmohq/storage": "^1.9.0",
    "@radix-ui/react-popover": "^1.0.6",
    "axios": "^1.6.0",
    "npm-run-all": "^4.1.5",
    "plasmo": "0.81.0",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@plasmohq/prettier-plugin-sort-imports": "3.6.4",
    "@types/chrome": "0.0.237",
    "@types/node": "20.2.4",
    "@types/react": "18.2.7",
    "@types/react-dom": "18.2.4",
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "@typescript-eslint/parser": "^5.60.1",
    "dotenv": "^16.3.1",
    "eslint": "^8.44.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "firebase-admin": "^11.9.0",
    "prettier": "2.8.8",
    "sharp": "^0.33.2",
    "ts-node": "^10.9.1",
    "typescript": "5.0.4"
  },
  "manifest": {
    "host_permissions": [
      "https://github.com/*",
      "https://storage.googleapis.com/*"
    ]
  }
}
